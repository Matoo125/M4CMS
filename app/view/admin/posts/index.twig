{% extends 'admin/base.twig' %}


{% block title %}Show all pages {% endblock %}

{% block breadcrumbs %}Posts {% endblock %}

{% block content %}


<a href="/admin{{ url.NEW_POST }}"><div id="action-button" class="btn-primary">+</div></a>

<div class="row">
  <div class="col-12">
    <div class="card">
        <div class="card-header">
            List of Posts
        </div>
        <div class="card-block">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Title</th>
                  <th>Category</th>
                  <th>Parent Page</th>
                  <th>Author</th>
                  <th>Published</th>
                </tr>
              </thead>
              <tbody>
                {% for post in posts %}
                <tr>
                  <th scope="row"><a href="/admin/posts/edit/{{ post.id }}">{{ post.id }}</a></th>
                  <td>{{ post.title }}</td>
                  <td>{{ post.category }}</td>
                  <td>{{ post.page }}</td>
                  <td>{{ post.author }}</td>
                  <td>{{ post.is_published }}</td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
        </div>
    </div>
  </div>
</div>
{% endblock %}

{% block scripts %} {% endblock %}
