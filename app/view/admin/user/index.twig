{% extends 'admin/base.twig' %}


{% block title %}Show all users {% endblock %}

{% block breadcrumbs %}
<li class="breadcrumb-item active">Users</li>
{% endblock %}

{% block content %}

<div class="row">
  <div class="col-12">
    <div class="card">
        <div class="card-header">
            List of Posts
        </div>
        <div class="card-block">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Username</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Role</th>
                </tr>
              </thead>
              <tbody>
                {% for user in users %}
                <tr>
                  <th scope="row"><a href="/admin/user/edit/{{ user.id }}">{{ user.id }}</a></th>
                  <td>{{ user.username }}</td>
                  <td>{{ user.first_name }}</td>
                  <td>{{ user.last_name }}</td>
                  <td>{{ user.role }}</td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
        </div>
    </div>
  </div>
</div>

{% endblock %}

{% block scripts %}

{% endblock %}
