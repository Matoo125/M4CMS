{% extends 'Skeleton.twig' %}

{% block content %}
  <div class="header">
    <h1>{{ page.title}} </h1>
    <p class="lead">{{ page.description }}</p>
    <p>{{ page.content|raw }}</p>
  </div>

  <div>


    {% for category in categories %}
        <h4>{{ category.title }}</h4>
        {% if category.posts %}
          <ul class="article-list-thumbnails">
            {% for post in category.posts %}
              <li style="background-image: url('/public/uploads/{{ post.image }}')">
                <h2><a href="{{ page.slug }}/{{ category.slug }}/{{ post.slug }}">{{ post.title }}</a></h2>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
    {% endfor %}
  </div>

{% endblock %}
