{% extends 'Base.twig' %}

{% block body %}
<!--content area start-->
<div id="content" class="content-area inner-page ">

  <div class="container-fluid">
    <div class="row" id="card-masonry">
           
        <div class="col-md-10 col-md-offset-1">

          <h1 class="text-center">Categories</h1>

            <div class="pmd-card pmd-z-depth pmd-card-custom-view">
              <div class="pmd-table-card">
                <table class="table pmd-table table-hover table-pointer">
                <thead>
                  <tr>
                    <th>#id</th>
                    <th>Title</th>
                    <th>Page</th>
                    <th>Posts</th>
                    <th>Created at</th>
                    <th>Updated at</th>
                  </tr>
                </thead>
                <tbody>
                  {% for category in categories %}
                  <tr onclick="router.go('/admin/categories/update/{{ category.id }}')">
                    <td data-title="#id">
                       <a href="/admin/categories/update/{{ category.id }}">
                        {{ category.id }}
                       </a>
                    </td>
                    <td data-title="Title">{{ category.title }}</td>
                    <td data-title="Page">{{ category.page }}</td>
                    <td data-title="Published">{{ category.posts }}</td>
                    <td data-title="Created at">{{ category.created_at }}</td>
                    <td data-title="Updated at">{{ category.updated_at }}</td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
              </div>
            </div> <!-- Card table example end -->
          
          </div>

  </div>
    
</div>

</div><!--end content area-->

<a onclick="router.go('/admin/categories/create')" role="button" class="btn pmd-btn-fab pmd-ripple-effect pmd-floating-action btn-primary">
  <i class="material-icons pmd-sm">
    add
  </i>
</a>


{% endblock %}