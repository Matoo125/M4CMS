{% extends 'Base.twig' %}

{% block body %}
<!--content area start-->
<div id="content" class="pmd-content content-area dashboard">

  <div class="container-fluid">
    <div class="row" id="card-masonry">
     
 
        <!-- Card table -->
      <section class="row component-section">
      
        <!-- Card table title and description -->
        <div class="col-md-3">
          <div id="card-table">
            <h2>Pages</h2>
          </div>
                    <p>Here you can see all your pages, manage them and add new.
                    </p>  
                    <a href="/admin/pages/create">
                      <button class="btn pmd-btn-fab pmd-btn-raised pmd-ripple-effect btn-primary" type="button">
                        <i class="material-icons pmd-sm">
                          add
                        </i>
                      </button>
                    </a>
        </div><!-- Card table title and description end-->
        
        <!-- Card table code and example -->
        <div class="col-md-9">
          <div class="component-box">
          
            <!-- Card table example -->
            <div class="pmd-card pmd-z-depth pmd-card-custom-view">
              <div class="pmd-table-card">
                <table class="table pmd-table table-hover">
                <thead>
                  <tr>
                    <th>#id</th>
                    <th>Title</th>
                    <th>Published</th>
                    <th>Created at</th>
                    <th>Updated at</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  {% for page in pages %}
                  <tr>
                    <td data-title="#id">
                       <a href="/admin/pages/update/{{ page.id }}">
                        {{ page.id }}
                       </a>
                    </td>
                    <td data-title="Title">{{ page.title }}</td>
                    <td data-title="Published">{{ page.is_published }}</td>
                    <td data-title="Created at">{{ page.created_at }}</td>
                    <td data-title="Updated at">{{ page.updated_at }}</td>
                    <td data-title="Action"></td>
                    <td data-title=""><a href="javascript:void(0);"><i class="material-icons md-dark pmd-sm">more_vert</i></a></td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
              </div>
            </div> <!-- Card table example end -->
          
          </div>
        </div> <!-- Card table code and example end -->
        
      </section><!-- Card table end -->   
     
    
  </div>
    
</div>

</div><!--end content area-->

{% endblock %}