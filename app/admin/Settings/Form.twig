<div class="section billinfo"> 
  <!-- section content start-->
  <form id="validationForm" action="" method="post">
  <div class="pmd-card pmd-z-depth">
    <!-- card body start -->
    <div class="pmd-card-body">
      
      <div class="group-fields clearfix row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="form-group pmd-textfield">
            <label for="title" class="control-label">
              Title
            </label>
            <input type="text" 
                   id="title" 
                   name="title" 
                   class="form-control" 
                   value="{{ settings.title.value }}">
          </div>
        </div>
      </div>

      <div class="group-fields clearfix row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="form-group pmd-textfield">
            <label for="desc" class="control-label">
              Description
            </label>
            <input type="text" 
                   id="desc" 
                   name="desc" 
                   class="form-control" 
                   value="{{ settings.description.value }}">
          </div>
        </div>
      </div>

    <div class="form-group pmd-textfield pmd-textfield-label">       
      <label>Theme</label>
      <select class="form-control" name="theme">
        {% for theme in themes %}
          <option {{ settings.theme.value == theme ? 'selected' : ''}} 
                  value="{{ theme }}">
            {{ theme }}
          </option>
        {% endfor %}
        </select>
    </div>



{#
      <pre>
        {{ dump(settings) }}

      </pre> #}
    
    </div>   <!-- card body end -->    

    <div class="pmd-card-actions">
      <a href="javascript:void(0);" class="btn btn-primary nex submit">Submit</a>
      {% block formButtons %}{% endblock %}
    </div>

  </div> <!-- section content end -->  
  </form>
</div>

