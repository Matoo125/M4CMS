{% extends 'Base.twig' %}

{% block body %}
<!--content area start-->
<div id="content" class="content-area inner-post ">

  <div class="container-fluid">
    <div class="row" id="card-masonry">
           
        <div class="col-md-10 col-md-offset-1">

          <h1 class="text-center">Users</h1>


            <div class="pmd-card pmd-z-depth pmd-card-custom-view">
              <div class="pmd-table-card">
                <table class="table pmd-table table-hover">
                <thead>
                  <tr>
                    <th>#id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Created at</th>
                    <th>Updated at</th>
                  </tr>
                </thead>
                <tbody>
                  {% for user in users %}
                  <tr onclick="router.go('/admin/users/update/{{ user.id }}')">
                    <td data-title="#id">
                       <a href="/admin/users/update/{{ user.id }}">
                        {{ user.id }}
                       </a>
                    </td>
                    <td data-title="Username">{{ user.username }}</td>
                    <td data-title="Email">{{ user.email }}</td>
                    <td data-title="Role">{{ user.role }}</td>
                    <td data-title="Created at">{{ user.created_at }}</td>
                    <td data-title="Updated at">{{ user.updated_at }}</td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
              </div>
            </div> <!-- Card table example end -->


          
          </div>

  </div>
    
</div>

</div><!--end content area-->

<a onclick="router.go('/admin/users/create')" role="button" class="btn pmd-btn-fab pmd-ripple-effect pmd-floating-action btn-primary">
  <i class="material-icons pmd-sm">
    add
  </i>
</a>

{% endblock %}