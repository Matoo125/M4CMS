{% extends 'Base.twig' %}
{% block content %}
  {% include 'Navbar.twig' %}
  <!-- START ARTICLE FEED -->
<div class="container">

     <section class="section">
       <!-- START ARTICLE -->
       <div class="card">
         <div class="card-content">
           <div class="media">
             <div class="media-center">
                 <img src="/public/uploads/{{ page.image }}" class="author-image" alt="Placeholder image">
             </div>
             <div class="media-content has-text-centered">
               <p class="title page-title">{{ page.title }}</p>
               <p class="subtitle is-6 page-subtitle">
                 {{ page.description }}
               </p>
             </div>
           </div>

         <div class="content page-body">
             {{ page.content|raw }}
           </div>
         </div>
       </div>
       <!-- END ARTICLE -->
     </section>

<section class="section">

   <div class="columns features">
      {% for post in posts %}
     <div class="column is-4">
       <div class="card">
         <div class="card-image has-text-centered">
             <i class="fa fa-paw"></i>
         </div>
         <div class="card-content">
           <div class="content">
             <h4>{{ post.title }} </h4>
             <p>{{ post.description }}</p>
             <p><a href="#">Read More</a></p>
           </div>
         </div>
       </div>
     </div>
     {% endfor %}
   </div> <!-- end of columns -->

 </section>
</div>
<!-- END ARTICLE FEED -->
{% endblock %}