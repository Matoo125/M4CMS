{% extends 'Skeleton.twig' %}

{% block type %}article{% endblock %}
{% block title %}{{ post.title }}{% endblock %}
{% block description %}{{ post.description }}{% endblock %}
{% block image %}/public/uploads/{{ post.image }}{% endblock %}

{% block content %}
  <div class="header">
    <h1>{{ post.title}} </h1>

    <p class="lead">{{ post.description }}</p>
    {% if post.image %}
      <img src="/public/uploads/{{ post.image }}" class="img-fluid" alt="">
    {% endif %}
  </div>

    <p>{{ post.content|raw }}</p>


{% endblock %}
